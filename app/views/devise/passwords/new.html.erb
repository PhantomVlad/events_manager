<h2 class="text-center"><%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="mb-3">
        <div class="field mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <div id="emailHelp" class="form-text">Введите зарегистрированный пароль</div>
        </div>
        <div class="actions text-center">
          <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary", data: {turbo: false}%>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
