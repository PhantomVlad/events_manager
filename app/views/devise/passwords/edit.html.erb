<h2 class="text-center"><%= t(".change-password") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="mb-3">
        <div class="field mb-3">
          <%= f.label :password, t(".new-password"), class: "form-label" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: t(".new-password"), class: "form-control" %>
          <div id="emailHelp" class="form-text">(<%= @minimum_password_length %> символов минимум)</div>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, t(".confirm-password"),class: "form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: t(".new-password"), class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit t(".change-my-password"), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>

