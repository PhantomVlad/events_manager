<div class="row justify-content-center">
  <div class="col-md-4">
    <h2 class="text-center">Регистрация</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo:false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-3">
        <div class="field mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <div id="emailHelp" class="form-text">Введите незарегистрированный email</div>
        </div>

        <div class="field mb-3">
          <%= f.label :name, class: "form-label" %>
          <em>(максимум 35 символов)</em>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password, class: "form-label" %>
          <em>(минимум <%= @minimum_password_length %> символов)</em>
          <%= f.password_field :password, autocomplete: "new-password", autofocus: true, class: "form-control" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true, class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Зарегистрироваться", class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
