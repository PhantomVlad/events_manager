<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="mb-3 col-lg-4">
    <div class="field mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <div id="emailHelp" class="form-text">Введите незарегистрированный email</div>
    </div>

    <div class="field mb-3">
      <%= f.label :name, class: "form-label" %>
      <em>(максимум 35 символов)</em>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class: "form-label" %>
      <em>(минимум <%= @minimum_password_length %> символов)</em>
      <%= f.password_field :password, autocomplete: "new-password", autofocus: true, class: "form-control" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary"%>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
