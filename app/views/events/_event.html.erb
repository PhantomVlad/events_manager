<div class="col-sm-4 col-md-3">
  <div class="thumbnail">
    <div class='event-background', style='background-image: url(<%= event_photo(event, :mini) %>)'></div>
    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description text-center">
          <h3><%= link_to event.title, event_path(event), class: "text-info" %></h3>
          <h3><small class="text-light"><%= l event.datetime, format: :long %></small></h3>
          <div class="buffer-both text-light"><%= event.address %></div>
        </div>
      </div>
    </div>
  </div>
</div>
