<div class="text-center mt-5">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user, :show) %>

  <% if @user == current_user %>
    <p class="buffer-top"><%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-secondary' %></p>
  <% end %>

  <div class="row mt-5">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Организовал:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">Пользователь пока не организовал ни одного события</p>
      <% end %>
    </div>
  </div>
</div>

