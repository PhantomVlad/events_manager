<%= form_for [@event, subscription], data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: subscription} %>

  <% unless user_signed_in? %>
    <div class="form-group">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :user_email %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>

    <div class="mb-3"><%= recaptcha_tags unless current_user.present? %></div>
  <% end %>

  <div class="actions">
    <%= f.submit t(".subscribe"), class: 'btn btn-success mt-3' %>
  </div>
<% end %>
